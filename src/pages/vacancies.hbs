        <div class="standard-header__clipper">
            <div class="standard-header__content">
                <div class="standard-header__bg" style="--overlay-opacity: 0;">
                    <img src="img/vacancies.jpg" alt="" class="standard-header__bg-image standard-header__bg-image--vacancies">
                </div>
                <div class="standard-header__logo-wrapper">
                    <a href="#" class="standard-header__logo">
                        <img src="img/logo.svg" alt="" class="standard-header__logo-image">
                        <div class="standard-header__logo-text">
                            МАРИЙСКИЙ ЗАВОД<br>
                            СИЛИКАТНОГО<br>
                            КИРПИЧА
                        </div>
                    </a>
                </div>
                <div class="standard-header__breadcrumbs">
                    <a href="#">
                        Главная
                        <svg width="14" height="14" aria-hidden="true" class="icon-breadcrumbs-arrow">
                            <use xlink:href="#breadcrumbs-arrow"></use>
                        </svg>
                    </a>
                    <a href="#">
                        О заводе
                        <svg width="14" height="14" aria-hidden="true" class="icon-breadcrumbs-arrow">
                            <use xlink:href="#breadcrumbs-arrow"></use>
                        </svg>
                    </a>
                    <a href="#" class="active">
                        вакансии
                        <svg width="14" height="14" aria-hidden="true" class="icon-breadcrumbs-arrow">
                            <use xlink:href="#breadcrumbs-arrow"></use>
                        </svg>
                    </a>
                </div>
                <h1 class="standard-header__main-heading">
                    Вакансии
                </h1>

            </div>
        </div>
    </div>
</section>


<section class="vacancies">
