{{#extend "layout"}}
{{#content "main"}}



<section class="standard-header">
    <div class="container">
        <div class="standard-header__content">
            <a href="#" class="standard-header__logo">
                <img src="img/logo.svg" alt="" class="standard-header__logo-image">
                <div class="standard-header__logo-text">
                    МАРИЙСКИЙ ЗАВОД<br>
                    СИЛИКАТНОГО<br>
                    КИРПИЧА
                </div>
            </a>
            <div class="standard-header__breadcrumbs">
                <a href="#">
                    Главная
                    <svg width="14" height="14" aria-hidden="true" class="icon-breadcrumbs-arrow">
                        <use xlink:href="#breadcrumbs-arrow"></use>
                    </svg>
                </a>
                <a href="#" class="active">
                    Калькулятор
                    <svg width="14" height="14" aria-hidden="true" class="icon-breadcrumbs-arrow">
                        <use xlink:href="#breadcrumbs-arrow"></use>
                    </svg>
                </a>
            </div>
            <h1 class="standard-header__main-heading">
                Калькулятор
            </h1>

        </div>
    </div>
</section>

<section class="calculator js-block-to-reveal">
    <div class="container">
        <div class="calculator__content">
            <h2 class="calculator__small-heading">
                Расчет количества кирпичей
            </h2>
            <div class="calculator__inner-content">
                <h3 class="calculator__large-heading">
                    Введите параметры дома и получите расчет необходимого количества кирпичей
                </h3>
                <form action="/" method="POST" class="calculator__form">
                    <div class="calculator__form-fields">
                        <div class="calculator__form-field">
                            <div class="calculator__form-field-label">
                                Высота строения, см
                            </div>
                            <input type="tel" class="calculator__form-field-input js-numeric-input-decimals"
                                value="900">
                        </div>
                        <div class="calculator__form-field">
                            <div class="calculator__form-field-label">
                                Длина строения, см
                            </div>
                            <input type="tel" class="calculator__form-field-input js-numeric-input-decimals"
                                value="1 600">
                        </div>
                        <div class="calculator__form-field">
                            <div class="calculator__form-field-label">
                                Ширина строения, см
                            </div>
                            <input type="tel" class="calculator__form-field-input js-numeric-input-decimals"
                                value="1 800">
                        </div>
                        <div class="calculator__form-field">
                            <div class="calculator__form-field-label">
                                Площадь дверных и оконных проектов, см
                            </div>
                            <input type="tel" class="calculator__form-field-input js-numeric-input-decimals"
                                value="1 000">
                        </div>
                        <div class="calculator__form-field calculator__form-field--fullwidth">
                            <div class="calculator__form-field-label">
                                Выберите тип укладки
                            </div>
                            <div class="calculator__form-checkboxes">
                                <label class="calculator__checkbox">
                                    <input type="radio" name="type" class="calculator__checkbox-input" value="1"
                                        checked="">
                                    <span class="calculator__checkbox-content">
                                        <svg width="14" height="14" aria-hidden="true" class="icon-calculator-1">
                                            <use xlink:href="#calculator-1"></use>
                                        </svg>
                                        <span class="calculator__checkbox-text">
                                            В полкирпича
                                        </span>
                                    </span>
                                </label>
                                <label class="calculator__checkbox">
                                    <input type="radio" name="type" class="calculator__checkbox-input" value="2">
                                    <span class="calculator__checkbox-content">
                                        <svg width="14" height="14" aria-hidden="true" class="icon-calculator-1">
                                            <use xlink:href="#calculator-2"></use>
                                        </svg>
                                        <span class="calculator__checkbox-text">
                                            В один кирпич
                                        </span>
                                    </span>
                                </label>
                                <label class="calculator__checkbox">
                                    <input type="radio" name="type" class="calculator__checkbox-input" value="3">
                                    <span class="calculator__checkbox-content">
                                        <svg width="14" height="14" aria-hidden="true" class="icon-calculator-1">
                                            <use xlink:href="#calculator-3"></use>
                                        </svg>
                                        <span class="calculator__checkbox-text">
                                            В полтора кирпича
                                        </span>
                                    </span>
                                </label>
                                <label class="calculator__checkbox">
                                    <input type="radio" name="type" class="calculator__checkbox-input" value="4">
                                    <span class="calculator__checkbox-content">
                                        <svg width="14" height="14" aria-hidden="true" class="icon-calculator-1">
                                            <use xlink:href="#calculator-4"></use>
                                        </svg>
                                        <span class="calculator__checkbox-text">
                                            В два кирпича
                                        </span>
                                    </span>
                                </label>
                                <label class="calculator__checkbox">
                                    <input type="radio" name="type" class="calculator__checkbox-input" value="5">
                                    <span class="calculator__checkbox-content">
                                        <svg width="14" height="14" aria-hidden="true" class="icon-calculator-1">
                                            <use xlink:href="#calculator-5"></use>
                                        </svg>
                                        <span class="calculator__checkbox-text">
                                            В два с половиной кирпича
                                        </span>
                                    </span>
                                </label>
                            </div>
                        </div>
                        <div class="calculator__form-field calculator__form-field--extra-padding">
                            <div class="calculator__form-field-label">
                                Ширина строения, см
                            </div>
                            <div class="calculator__form-select">
                                <select name="width" class="js-custom-select">
                                    <option value="1">
                                        Одинарный
                                    </option>
                                    <option value="2">
                                        Двойной
                                    </option>
                                </select>
                            </div>
                        </div>
                        <div class="calculator__form-field calculator__form-field--extra-padding">
                            <div class="calculator__form-field-label">
                                Учитывать раствор шва
                            </div>
                            <div class="calculator__form-field-radios">
                                <label class="calculator__form-field-radio">
                                    <input type="radio" name="seam" class="calculator__form-field-radio-input" value="1"
                                        checked="">
                                    <span class="calculator__form-field-radio-content">
                                        Да
                                    </span>
                                </label>
                                <label class="calculator__form-field-radio">
                                    <input type="radio" name="seam" class="calculator__form-field-radio-input"
                                        value="2">
                                    <span class="calculator__form-field-radio-content">
                                        Нет
                                    </span>
                                </label>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="calculator__result-wrapper">


                    <div class="calculator__result">
                        <div class="calculator__result-amount">
                            25 907 310
                        </div>
                        <div class="calculator__result-text">
                            Необходимое количество кирпичей, шт.
                        </div>
                        <a href="#order-product" class="calculator__result-link">
                            Заказать
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="contact-us js-block-to-reveal" id="contact">
    <div class="container">
        <div class="contact-us__row">
            <div class="contacts-us__content">
                <h2 class="contact-us__heading">
                    Есть вопросы?
                </h2>
                <form action="/" method="POST" class="contact-us__form" data-need-validation="">
                    <h3 class="contacts-us__form-heading">
                        Напишите нам, наши менеджеры свяжутся с&nbsp;вами в самое ближайшее время
                    </h3>
                    <div class="contacts-us__form-fields">
                        <div class="contacts-us__form-field">
                            <input type="text" class="contacts-us__form-input" placeholder="Имя" required="">
                        </div>
                        <div class="contacts-us__form-field">
                            <input type="tel" class="contacts-us__form-input js-phone-input" placeholder="Телефон"
                                required="" data-parsley-phone="">
                        </div>
                        <div class="contacts-us__form-field">
                            <input type="text" class="contacts-us__form-input" placeholder="Вопрос (необязательно)">
                        </div>
                    </div>
                    <div class="contacts-us__form-controls">
                        <button type="submit" class="contacts-us__form-submit">
                            Отправить
                        </button>
                        <div class="contacts-us__form-policy">
                            Нажимая “Отправить” вы соглашаетесь <a href="#">с политикой конфиденциальности</a>
                        </div>
                    </div>
                </form>
            </div>
            <div class="contacts-us__image-wrapper">
                <img src="img/contact-us.jpg" alt="" class="contacts-us__image">
            </div>
        </div>
    </div>
</section>

{{/content}}
{{/extend}}